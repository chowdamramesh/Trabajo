<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.chandra.trabajo.Sidebar">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:src="@drawable/smalllogo"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cProjName"
        android:width="250dp"
        android:hint="Proj Name"
        android:layout_below="@+id/imageView3"
        android:layout_alignLeft="@+id/cProjDesc"
        android:layout_alignStart="@+id/cProjDesc"
        android:layout_marginTop="37dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cProjDesc"
        android:layout_below="@+id/cProjName"
        android:layout_centerHorizontal="true"
        android:width="250dp"
        android:hint="Proj Desc" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cProjStart"
        android:layout_below="@+id/cProjDesc"
        android:layout_centerHorizontal="true"
        android:width="250dp"
        android:hint="Proj Start (yyyy-MM-dd)" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cProjEnd"
        android:layout_below="@+id/cProjStart"
        android:layout_centerHorizontal="true"
        android:width="250dp"
        android:hint="Proj EndDate (yyyy-MM-dd)" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Project"
        android:id="@+id/cProjNew"
        android:layout_below="@+id/cProjEnd"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp" />
</RelativeLayout>
