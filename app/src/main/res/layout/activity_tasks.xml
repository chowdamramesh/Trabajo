<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.chandra.trabajo.TasksActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:src="@drawable/smalllogo"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cTaskName"
        android:width="250dp"
        android:hint="Task Name"
        android:layout_marginTop="37dp"
        android:layout_below="@+id/imageView3"
        android:layout_alignLeft="@+id/cTprojName"
        android:layout_alignStart="@+id/cTprojName" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cTaskDesc"
        android:width="250dp"
        android:hint="Task Desc"
        android:layout_below="@+id/cTprojName"
        android:layout_alignLeft="@+id/cTaskStart"
        android:layout_alignStart="@+id/cTaskStart" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cTaskStart"
        android:layout_below="@+id/cTaskDesc"
        android:layout_centerHorizontal="true"
        android:width="250dp"
        android:hint="Task Start (yyyy-MM-dd)" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cTaskEnd"
        android:width="250dp"
        android:hint="Task EndDate (yyyy-MM-dd)"
        android:layout_below="@+id/cTaskStart"
        android:layout_alignLeft="@+id/cTaskStart"
        android:layout_alignStart="@+id/cTaskStart" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Task"
        android:id="@+id/cTaskNew"
        android:layout_marginTop="73dp"
        android:layout_below="@+id/cTaskEnd"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/cTaskAssgnPh"
        android:layout_below="@+id/cTaskEnd"
        android:layout_alignLeft="@+id/cTaskEnd"
        android:layout_alignStart="@+id/cTaskEnd"
        android:width="250dp"
        android:hint="Task Assigned Person Phone" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/cTprojName"
        android:width="250dp"
        android:hint="Proj Name"
        android:layout_below="@+id/cTaskName"
        android:layout_alignLeft="@+id/cTaskDesc"
        android:layout_alignStart="@+id/cTaskDesc" />

</RelativeLayout>
